<% if notice %>
  <p class="notice"><%= notice %></p>
<% end %>

<% content_for :title, @project.project_name %>

<div class="project-details">
  <div class="project-details-header">
    <h1 class="project-details-title"><%= @project.project_name %></h1>
    <%= link_to "กลับไปหน้าหลัก", projects_path, class: "back-button" %>
  </div>

  <div class="project-members">
    <div class="section-header">
      <h2 class="section-title">สมาชิกในโปรเจค</h2>
      <button type="button" class="add-member-button" onclick="toggleAddMemberForm()">
        เพิ่มสมาชิก
      </button>
    </div>



    <div class="table-container">
      <table class="members-table">
        <thead>
          <tr>
            <th>อีเมล</th>
            <th>บทบาท</th>
            <th>จัดการ</th>
          </tr>
        </thead>
        <tbody>
          <% @project.user_projects.each do |user_project| %>
            <tr>
              <td><%= user_project.user.email %></td>
              <td><%= user_project.position.titleize %></td>
              <td>
                <div class="member-actions">
                  <%= link_to "แก้ไข", edit_project_user_path(@project, user_project.user), class: "member-action-button edit-button" %>
                  <%= button_to "ลบ", project_user_path(@project, user_project.user), method: :delete, class: "member-action-button delete-button", data: { confirm: 'คุณแน่ใจหรือไม่?' } %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="project-actions">
    <%= link_to "แก้ไขข้อมูล", edit_project_path(@project), class: "project-action-button edit-button" %>
    <%= button_to "ลบโปรเจค", @project, method: :delete, class: "project-action-button delete-button" %>
  </div>
</div>

<% if current_user.admin? %>
  <div class="export-section">
    <h2>Export Timesheet Report</h2>
    <%= form_tag export_pdf_project_path(@project, format: :pdf), method: :get, class: "export-form" do %>
      <div class="form-group">
        <%= label_tag :month, "Select Month:" %>
        <%= select_tag :month, options_for_select((1..12).map { |m| [I18n.t('date.month_names')[m], m] }, Time.current.month) %>
      </div>
      <div class="form-group">
        <%= label_tag :year, "Select Year:" %>
        <%= select_tag :year, options_for_select((Time.current.year-1..Time.current.year+1), Time.current.year) %>
      </div>
      <%= submit_tag "Export PDF", class: "button export" %>
    <% end %>
  </div>
<% end %>

<%= javascript_tag do %>
  function toggleAddMemberForm() {
    const form = document.getElementById('addMemberForm');
    form.style.display = form.style.display === 'none' ? 'block' : 'none';
  }
<% end %>
