<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div class="error-container">
      <h2 class="error-title"><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>
      <ul class="error-list">
        <% project.errors.each do |error| %>
          <li class="error-item"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :project_name, "ชื่อโปรเจค", class: "form-label" %>
    <%= form.text_field :project_name, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :site_id, "ไซต์", class: "form-label" %>
    <%= form.collection_select :site_id, Site.all, :id, :site_name, { prompt: "เลือกไซต์" }, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :check_in, "เวลาเช็คอิน", class: "form-label" %>
    <%= form.time_field :check_in, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :check_out, "เวลาเช็คเอาท์", class: "form-label" %>
    <%= form.time_field :check_out, class: "form-input" %>
  </div>

  <div class="form-actions">
    <%= form.submit "บันทึก", class: "submit-button" %>
    <%= link_to "ยกเลิก", projects_path, class: "cancel-button" %>
  </div>
<% end %>
