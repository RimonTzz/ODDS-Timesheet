<%= form_with(model: site, local: true) do |form| %>
  <% if site.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(site.errors.count, "error") %> prohibited this site from being saved:</h2>
      <ul>
        <% site.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :site_name, "Site Name", class: "form-label" %>
    <%= form.text_field :site_name, class: "form-input", required: true, placeholder: "Site Name" %>
  </div>

  <div class="form-group">
    <%= form.label :location, "Location", class: "form-label" %>
    <%= form.text_field :location, class: "form-input", required: true, placeholder: "Location" %>
  </div>

  <div class="form-group">
    <%= form.label :client_id, "Client", class: "form-label" %>
    <%= form.collection_select :client_id, Client.all, :id, :client_name, { prompt: "Choose Client" }, { class: "form-select" } %>
  </div>

  <div class="form-actions">
    <%= form.submit "Save", class: "minimal-button primary" %>
    <%= link_to "Cancel", sites_path, class: "minimal-button secondary" %>
  </div>
<% end %>
