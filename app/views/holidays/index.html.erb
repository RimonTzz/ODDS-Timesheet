<h1>จัดการวันหยุด</h1>

<div class="holidays-header">
  <%= link_to "เพิ่มวันหยุดใหม่", new_holiday_path, class: "button" %>
</div>

<table>
  <thead>
    <tr>
      <th>วันที่</th>
      <th>ชื่อวันหยุด</th>
      <th>ประเภท</th>
      <th>รายละเอียด</th>
      <th>จัดการ</th>
    </tr>
  </thead>

  <tbody>
    <% @holidays.each do |holiday| %>
      <tr>
        <td><%= holiday.date.strftime("%d/%m/%Y") %></td>
        <td><%= holiday.name %></td>
        <td>
          <% if holiday.is_exception %>
            <span class="badge exception">ยกเว้น</span>
          <% elsif holiday.is_bank_holiday %>
            <span class="badge bank-holiday">วันหยุดธนาคาร</span>
          <% end %>
        </td>
        <td><%= holiday.description %></td>
        <td>
          <%= link_to "แก้ไข", edit_holiday_path(holiday), class: "button small" %>
          <%= button_to "ลบ", holiday_path(holiday), method: :delete, class: "button small delete", data: { confirm: "คุณแน่ใจหรือไม่ที่จะลบวันหยุดนี้?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table> 