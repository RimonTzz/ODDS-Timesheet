<%= form_with(model: client, data: { turbo: true }, html: { id: "newClientForm" }) do |form| %>
  <% if client.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>
      <ul>
        <% client.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :client_name, "Client name *", class: "form-label" %>
    <div class="form-input-container">
      <%= form.text_field :client_name, class: "form-input", required: true, placeholder: "Client name" %>
      <div class="error-message" data-form-validation-target="clientNameError"></div>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :contact_info, "Contact info", class: "form-label" %>
    <div class="form-input-container">
      <%= form.text_field :contact_info, class: "form-input", placeholder: "Contact info" %>
      <div class="error-message" data-form-validation-target="contactInfoError"></div>
    </div>
  </div>

  <div class="form-actions">
    <%= form.submit class: "submit-button", data: { disable_with: "Saving..." } %>
    <%= link_to "Cancel", clients_path, class: "cancel-button" %>
  </div>
<% end %>