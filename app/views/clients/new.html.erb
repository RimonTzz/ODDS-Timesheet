<div class="page-container">
  <div class="page-header">
    <h1 class="page-title">New Client</h1>
  </div>

  <%= form_with(model: @client, local: true, class: "form") do |form| %>
    <% if @client.errors.any? %>
      <div class="error-messages">
        <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>
        <ul>
          <% @client.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :client_name %>
      <%= form.text_field :client_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :contact_info %>
      <%= form.text_field :contact_info, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= form.submit "Create Client", class: "btn btn-primary" %>
      <%= link_to "Back", clients_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
