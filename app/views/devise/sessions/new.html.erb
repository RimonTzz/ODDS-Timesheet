<div class="auth-container">
  <div class="auth-header">
    <h2 class="auth-title">เข้าสู่ระบบ</h2>
  </div>

  <div class="auth-form-container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <div class="form-group">
        <%= f.label :email, "อีเมล", class: "form-label" %>
        <div class="form-input-container">
          <%= f.email_field :email, autocomplete: "email", class: "form-input", placeholder: "อีเมล" %>
          <% if resource.errors[:email].any? %>
            <p class="error-message"><%= resource.errors[:email].join(", ") %></p>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, "รหัสผ่าน", class: "form-label" %>
        <div class="form-input-container">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-input", placeholder: "รหัสผ่าน" %>
          <% if resource.errors[:password].any? %>
            <p class="error-message"><%= resource.errors[:password].join(", ") %></p>
          <% end %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
            <%= f.label :remember_me, "จดจำฉัน", class: "ml-2 block text-sm text-gray-900" %>
          </div>
        </div>
      <% end %>

      <div>
        <%= f.submit "เข้าสู่ระบบ", class: "submit-button" %>
      </div>
    <% end %>

    <p class="auth-link-container">
      ยังไม่มีบัญชี?
      <%= link_to "สมัครสมาชิก", new_registration_path(resource_name), class: "auth-link" %>
    </p>
  </div>
</div>
