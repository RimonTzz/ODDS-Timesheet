<h1>New Time Sheet</h1>

<%= form_with(url: new_timesheet_path, method: :get, local: true) do |form| %>
  <div class="field">
    <%= form.label :user_project_id, "Project" %>
    <%= form.select :user_project_id, @user_projects.map { |up| [up.project.project_name, up.id] }, prompt: "Select Project" %>
  </div>

  <div class="field">
    <%= form.label :month, "Month" %>
    <%= select_tag :month, options_for_select(@months, @selected_month), prompt: "Select Month" %>
  </div>

  <%= form.submit "Load Days" %>
<% end %>

<% if @timesheet_days.present? %>
  <%= form_with(url: timesheets_path, method: :post) do |form| %>
    <%# ... Table สำหรับกรอกข้อมูล ... %>
    <div class="actions">
      <%= form.submit "Save Timesheet" %>
      <%= link_to "Cancel", timesheets_path %>
    </div>
  <% end %>
<% end %>

<%= link_to "Back to Time Sheets", timesheets_path %>